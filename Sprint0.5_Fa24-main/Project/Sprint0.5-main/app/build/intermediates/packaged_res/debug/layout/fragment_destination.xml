<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/destinationFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Destination Header -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <!-- Log Travel Button -->
    <Button
        android:id="@+id/logTravelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Travel" />

    <!-- Calculate Vacation Time Button -->
    <Button
        android:id="@+id/calculateVacationTimeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Vacation Time"
        android:layout_marginTop="16dp" />

    <!-- Vacation Time Calculator Form (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/vacationTimeCalculatorForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="16dp">

        <!-- Start Date Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date" />

        <EditText
            android:id="@+id/startDateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Start Date" />

        <!-- End Date Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/endDateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter End Date" />

        <!-- Duration Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration (days)"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/durationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Duration" />

        <!-- Calculate Button -->
        <Button
            android:id="@+id/calculateVacationTimeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Travel Logs Container -->
    <LinearLayout
        android:id="@+id/travelLogsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">
    </LinearLayout>

    <!-- Result Display -->
    <LinearLayout
        android:id="@+id/resultDisplayLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/calculatedField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculated Vacation Time:"
            android:paddingBottom="8dp" />
    </LinearLayout>
</LinearLayout>
