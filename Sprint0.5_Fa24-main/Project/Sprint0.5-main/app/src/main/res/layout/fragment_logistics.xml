<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logistics"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <!-- Button to visualize allotted vs planned trip days -->
    <Button
        android:id="@+id/visualizeTripDaysButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visualize Trip Days"
        android:layout_marginTop="8dp" />

    <!-- Pie Chart for showing trip days with distinct colors -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF" />

    <!-- EditText for inviting users -->
    <EditText
        android:id="@+id/inviteUserEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter user email or username"
        android:inputType="textEmailAddress"
        android:layout_marginTop="16dp" />

    <!-- Button to invite users -->
    <Button
        android:id="@+id/inviteUsersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite Users"
        android:layout_marginTop="8dp" />

    <!-- Buttons for notes actions -->
    <Button
        android:id="@+id/viewNotesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Notes"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/listNotesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Notes"
        android:layout_marginTop="16dp" />

</LinearLayout>
